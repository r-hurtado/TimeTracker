            <div class="col-md-10">
                @Html.DisplayFor(model => model.leader)
                @*@Html.ValidationMessageFor(model => model.leader, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.time, htmlAttributes: new { @class = "control-label col-md-2" })
