@model test8.Models.Project

@{
    ViewBag.Title = "Add Time";
}

<h2>Add Time</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Project</h4>
        <hr />
